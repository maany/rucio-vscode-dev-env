		{
			"label": "start-rucio",
			"type": "shell",
			"command": "sleep 5 && podman exec -t rucio-dev /opt/rucio/etc/init-dev-container.sh",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				{
				  "pattern": [
					{
					  "regexp": ".",
					  "file": 1,
					  "location": 2,
					  "message": 3
					}
				  ],
				  "background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "Initialization is now Complete! Happy Debugging.*",
				  }
				}
			]
		},
