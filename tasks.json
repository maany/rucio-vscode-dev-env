		{
			"label": "cleanup",
			"type": "shell",
			"command": "podman exec -t rucio-dev pkill python || exit 0",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
