		{
			"label": "rucio-pytest:debug",
			"type": "shell",
			"command": "podman exec -d -t rucio-dev python -m debugpy --listen 0.0.0.0:5681 --wait-for-client -m pytest -vvvrxs ${relativeFile} && sleep 5",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": {
				"owner": "python",
				"fileLocation": ["relative", "${workspaceFolder}/lib/rucio"],
                "pattern": [
                    {
                        "regexp": "^.*File \\\"([^\\\"]|.*)\\\", line (\\d+).*",
                        "file": 1,
                        "line": 2
                    },
                    {
                        "regexp": "^.*raise.*$"
                    },
                    {
                        "regexp": "^\\s*(.*)\\s*$",
                        "message": 1
                    }
                ],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Restarting with watchdog (inotify)",
					"endsPattern": "^.*Debugger is active!",
				}
			}
		},
